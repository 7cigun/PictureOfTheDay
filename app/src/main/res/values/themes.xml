<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PictureOfTheDay" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="rootColor">@color/blue</item>
        <item name="superColor">@color/magenta</item>

        <item name="colorPrimary">?attr/rootColor</item>
        <!--<item name="colorOnSurface">?rootColor</item>-->
        <item name="colorOnSecondaryContainer">?superColor</item>
        <item name="colorPrimaryContainer">?superColor</item>
        <!--<item name="colorSurface">?rootColor</item>-->
        <item name="colorOnSurfaceVariant">?superColor</item>

        <item name="chipStyle">@style/MyChipStyle</item>

        <item name="textInputStyle">@style/MyTextInputLayoutStyle</item>

        <item name="bottomAppBarStyle">@style/MyAppBarStyle</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="MyAppBarStyle" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">?rootColor</item>
        <item name="navigationIconTint">?superColor</item>
    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="MyTextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">?rootColor</item>
        <item name="rippleColor">?superColor</item>
        <item name="chipStrokeColor">?superColor</item>
        <item name="android:textAppearance">@style/MyTextAppearanceBody2</item>
        <item name="shapeAppearance">@style/MyShapeAppearanceSmallComponent</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">?rootColor</item>
    </style>-->

    <style name="Theme.PictureOfTheDay" parent="Base.Theme.PictureOfTheDay" />

    <style name="SkyTheme" parent="Base.Theme.PictureOfTheDay">
        <item name="rootColor">@color/blue</item>
        <item name="superColor">@color/magenta</item>
    </style>

    <style name="FlowerTheme" parent="Base.Theme.PictureOfTheDay">
        <item name="rootColor">@color/red</item>
        <item name="superColor">@color/green</item>
    </style>

    <style name="LimeTheme" parent="Base.Theme.PictureOfTheDay">
        <item name="rootColor">@color/green</item>
        <item name="superColor">@color/orange</item>
    </style>
</resources>